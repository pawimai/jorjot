<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login or Register Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container p-5">
        <h1 class="text-center mb-5 text-uppercase text-muted">test login & register</h1>

        <div class="col-sm-5 bg-light rounded py-3 offset-sm-3">
             <h2 class="text-center">Login</h2>
             <form action="" method="POST">
                <div class="form-group mt-2">
                    <label for="_name">Name</label>
                    <input type="text" name="user_name" id="_name" class="form-control" placeholder="Name" required>
                </div>
                <div class="form-group mt-2">
                    <label for="_pass">Password</label>
                    <input type="password" name="user_pass" id="_pass" class="form-control" placeholder="Password">
                </div>
                <% if (locals.login_errors) { 
                    login_errors.forEach(function(error_msg){ %>
                    <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                  <% });
                  } %>
                <button type="submit" class="mt-2 btn btn-primary">Login</button>
             </form>
        </div>

      </br>

        <div class="col-sm-5 bg-light rounded border py-3 offset-sm-3">
            <h2 class="text-center">Register</h2>
            <form action="/register" method="POST" novalidate>
                <div class="form-group mt-2">
                    <label for="_rname">Name</label>
                    <input type="text" name="user_name" id="_rname" class="form-control" placeholder="Name" value="<%= (locals.old_data) ? old_data.user_name : ''; %>" required>
                  </div>
                  <div class="form-group mt-2">
                    <label for="_remail">Email</label>
                    <input type="email" name="user_email" id="_remail" class="form-control" placeholder="Email" value="<%= (locals.old_data) ? old_data.user_email : ''; %>" required>
                  </div>
                  <div class="form-group mt-2">
                    <label for="_rpass">Password</label>
                    <input type="password" name="user_pass" id="_rpass" class="form-control" placeholder="Password" required>
                  </div>
                  <div class="form-group mt-2">
                    <label for="_rconfirm_pass">Confirm Password</label>
                    <input type="password" name="confirm_pass" id="_rconfirm_pass" class="form-control" placeholder="Confirm password" required>
                </div>
                  <% if (locals.register_error) { 
                    register_error.forEach(function(error_msg){ %>
                    <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                  <% });
                  } %>
                  <button type="submit" class="mt-2 btn btn-success">Sign Up</button>
            </form>
        </div>

    </div>
</body>
</html>